<?xml version="1.0" encoding="utf-8"?>
<!--@formatter:off-->
<!--Fuck it the formatter:off doesn't do shit.-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main_menu"
>
    <!--Fucking hell, RelativeLayout has to be one of the most cancerous shit to work with.-->
    <!--@+ is used to signify the name.-->
    <!--@+ is used to signify the file location.-->
    <TextView
        android:text="Game Title"
        android:textColor="#FFFFFF"
        android:textSize="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
    />

    <Button
        android:id="@+id/button_start"
        android:background="@drawable/button"
        android:text="Start"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"
    />

    <Button
        android:id="@+id/button_options"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="180dp"
        android:background="@drawable/button"
        android:text="Options"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="130dp"
        android:layout_alignLeft="@id/button_start"
    />

    <Button
        android:id="@+id/button_highScore"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="180dp"
        android:background="@drawable/button"
        android:text="High Score"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="130dp"
        android:layout_alignRight="@id/button_start"
    />
</RelativeLayout>